{
  "name": "Smooth Cursorify — Smooth cursors for everyone",
  "short_name": "Smooth Cursorify",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Apply a Microsoft Word-like smooth caret animation to multiple online editors",
  "content_scripts": [
   {
     "matches": ["https://docs.google.com/document/*", "http://docs.google.com/document/*"],
     "js": ["google-docs.js"]
   }
  ],
 "icons": 
 { 
  "16": "icon16.png",
  "48": "icon48.png",
  "128": "icon128.png" 
  },
  "browser_action": {
    "default_title": "Smooth Cursorify",
    "default_icon": "icon.png"
  },
  "permissions": [
    "http://docs.google.com/*", 
    "https://docs.google.com/*"
  ]
}
